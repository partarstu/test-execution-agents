<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback configuration for Google Cloud deployment.
  Uses Google Cloud Logging structured JSON output for proper multi-line log handling.
-->
<configuration debug="true">
    <!-- Google Cloud Logging Appender configured to redirect structured JSON to stdout -->
    <appender name="CLOUD_STDOUT" class="com.google.cloud.logging.logback.LoggingAppender">
        <!-- Redirect to stdout for Cloud Logging agents to pick up -->
        <redirectToStdout>true</redirectToStdout>

        <!-- Log level threshold -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>

        <!-- Include stack traces in the message -->
        <includeExceptionInMessage>true</includeExceptionInMessage>

        <!-- Flush the logs immediately -->
        <flushLevel>DEBUG</flushLevel>
    </appender>

    <!-- File appender for local file logging (still useful for debugging) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR:-log}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR:-log}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="${LOG_LEVEL:-INFO}">
        <appender-ref ref="CLOUD_STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.eclipse.jetty" level="OFF"/>
    <logger name="dev.langchain4j.http.client.log" level="OFF"/>
    <logger name="dev.langchain4j" level="INFO"/>
    <logger name="io.grpc.netty" level="INFO"/>
    <logger name="io.a2a.server" level="INFO"/>
</configuration>
